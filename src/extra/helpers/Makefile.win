#-*- Makefile -*-
include ../../gnuwin32/MkRules

DEFS=-DHAVE_CONFIG_H

CPPFLAGS=-I../../include -I. $(DEFS)

## done this way for parallel make
all:
	$(MAKE) -f Makefile.win makeMakedeps
	$(MAKE) -f Makefile.win libhelpers.a

CSOURCES = helpers.c helpers-app.c

OBJS = $(CSOURCES:.c=.o)
libhelpers.a: $(OBJS)

clean:
	@$(RM) *.o *~ *.d Makedeps

distclean: clean
	@$(RM) libhelpers.a

# Dependencies
DEPS=$(CSOURCES:.c=.d)

makeMakedeps: $(DEPS)
	@$(RM) Makedeps
	@cat $(DEPS) >> Makedeps

-include Makedeps
